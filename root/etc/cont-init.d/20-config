#!/usr/bin/with-contenv bash

# make our folders
mkdir -p /config/{nginx/site-confs,www,log/nginx,keys}

# copy config files
[[ ! -f /config/nginx/nginx.conf ]] && cp /defaults/nginx.conf /config/nginx/nginx.conf
[[ ! -f /config/nginx/nginx-fpm.conf ]] && cp /defaults/nginx-fpm.conf /config/nginx/nginx-fpm.conf
[[ ! -f /config/nginx/site-confs/default ]] && cp /defaults/default /config/nginx/site-confs/default
[[ $(find /config/www -type f | wc -l) -eq 0 ]] && cp /defaults/index.html /config/www/index.html
cp /config/nginx/nginx-fpm.conf /etc/php/php-fpm.conf

# permissions
chown -R mab:mab /config
